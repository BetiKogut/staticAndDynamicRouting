table_set_default MyIngress.routing_table NoAction
table_set_default MyEgress.switching_table NoAction
table_set_default MyEgress.mac_rewriting_table NoAction

table_add MyIngress.routing_table ipv4_forward 192.168.1.0/24 => 192.168.100.1   2
table_add MyIngress.routing_table ipv4_forward 192.168.2.0/24 => 192.168.2.2     1
table_add MyIngress.routing_table ipv4_forward 192.168.3.0/24 => 192.168.102.3   3

table_add MyEgress.switching_table set_destmac 192.168.2.2 => 00:00:00:00:00:02
table_add MyEgress.switching_table set_destmac 192.168.102.3 => 00:00:00:00:03:03
table_add MyEgress.switching_table set_destmac 192.168.100.1 => 00:00:00:00:01:02

table_add MyEgress.mac_rewriting_table set_sourcemac 1 => 00:00:00:00:02:01
table_add MyEgress.mac_rewriting_table set_sourcemac 2 => 00:00:00:00:02:02
table_add MyEgress.mac_rewriting_table set_sourcemac 3 => 00:00:00:00:02:03